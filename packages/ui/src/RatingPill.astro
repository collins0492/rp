---
import clsx from "clsx";
import StarIcon from "@rp/icons/solid/StarIcon.astro";

const { rating, numberOfRatings, class: className = "" } = Astro.props;

const pillClasses = clsx(
  "flex flex-row items-center gap-1 rounded-full py-1 px-2",
  className
);
---

<div class={pillClasses}>
  <StarIcon class="size-5 text-green-300 inline-block align-middle" />
  <span class="inline-block align-middle">{rating}
  {numberOfRatings && `(${numberOfRatings})`}</span>
</div>
