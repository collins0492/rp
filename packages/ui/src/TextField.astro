---
import clsx from "clsx";

const { label, error, class: className = "", name, required, type, disabled, placeholder } = Astro.props;

const disabledClasses = disabled ? "cursor-not-allowed opacity-50" : "";
---

<div class="flex-1 flex flex-col w-full justify-center gap-2 text-foreground">
  {
    label && (
      <label class="text-md" for={name}>
        {label}
        {required ? " *" : ""}
      </label>
    )
  }
  <input
    class={clsx(
      "bg-white rounded-md px-4 py-2 bg-inherit border",
      error ? "border-red-500" : "border-gray-300",
      disabledClasses,
      className
    )}
    type={type}
    disabled={disabled}
    placeholder={placeholder}
  />
  {error && <span class="text-red-500">{error}</span>}
</div>
