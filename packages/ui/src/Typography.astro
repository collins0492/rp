---
import clsx from "clsx";
import { TypographyProps } from "./Typography.types";

const customElementTags = [
  "body1",
  "body2",
  "subtitle1",
  "subtitle2",
  "overline",
];

const {
  variant = "body1",
  component,
  class: className = "",
  underline = false,
}: TypographyProps = Astro.props;

const classes = {
  h1: "text-4xl font-bold",
  h2: "text-3xl font-bold",
  h3: "text-2xl font-bold",
  h4: "text-xl font-bold",
  h5: "text-lg font-bold",
  h6: "text-base font-bold",
  subtitle1: "text-lg",
  subtitle2: "text-base",
  body1: "text-md text-gray-600",
  body2: "text-sm",
  overline: "text-xs uppercase",
  caption: "text-xs",
};

let tag = component || variant;
if (customElementTags.includes(variant)) {
  tag = "p";
}

const Tag = tag;
const mergedClass = clsx(
  classes[variant],
  className,
  underline && "underline decoration-2"
);
---

<Tag class={mergedClass}>
  <slot />
</Tag>
